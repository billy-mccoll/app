<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<link rel="stylesheet" href="css/bootstrap.css" />
		<title>Admin</title>
	</head>
	<body>
		<!-- MAIN NAVIGATION -->
		<nav
			class="navbar navbar-expand-lg navbar-dark bg-dark pt-3 pb-3 borderBottom"
		>
			<a class="navbar-brand" href="/home">
				<img src="img/logo.png" alt="" />
			</a>
			<!-- HAMBURGER MOBILE MENU -->
			<button
				class="navbar-toggler"
				type="button"
				data-toggle="collapse"
				data-target="#navbarsExample05"
				aria-controls="navbarsExample05"
				aria-expanded="false"
				aria-label="Toggle navigation"
			>
				<span class="navbar-toggler-icon"></span>
			</button>

			<!-- NAVIGATION MENU ITEMS -->
			<div class="collapse navbar-collapse" id="navbarsExample05">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link active" href="/home">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/seller">Sell Music</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/register">Register</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/login">Login</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/admin"
							>Admin<span class="sr-only">(current)</span></a
						>
					</li>
				</ul>
				<!-- SEARCH INPUT INSIDE HEADER -->
				<form class="form-inline my-2 my-md-0">
					<input
						class="form-control"
						type="text"
						placeholder="Search"
					/>
				</form>
			</div>
		</nav>

		<div class="container">
			<h1 class="mt-5 text-danger text-center">All Products</h1>

			<table class="table mt-5 col-md-8 offset-md-2">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Artist</th>
						<th scope="col">Album</th>
						<th scope="col">Genre</th>
						<th scope="col">Date</th>
						<th scope="col">Price</th>
					</tr>
				</thead>
				<% products.forEach(function(prod) { %>
				<tbody>
					<div class="row">
						<tr>
							<td class="table-dark text-danger">
								<%= prod.artist %>
							</td>
							<td class="table-dark text-danger">
								<%= prod.album %>
							</td>
							<td class="table-dark text-danger">
								<%= prod.genre %>
							</td>
							<td class="table-dark text-danger">
								<%= prod.albumdate %>
							</td>
							<td class="table-dark text-danger">
								Â£ <%= prod.price %>
							</td>
						</tr>
					</div>
				</tbody>
				<% }); %>
			</table>
		</div>

		<script
			src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
			integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
			integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
			crossorigin="anonymous"
		></script>
		<script src="js/bootstrap.js"></script>
	</body>
</html>
