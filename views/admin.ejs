			<table class="table mt-5 col-md-10 offset-md-1">
				<thead class="thead-dark">
					<tr>
						<th>User</th>
						<th>Name</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>

				<tbody>
					<% for(var i=0; i < users.length; i++) { %>

					<tr>
						<td class="table-dark text-light">
							<%= users[i].fullname %>
						</td>
						<td class="table-dark text-light">
							<%= users[i].email %>
						</td>
						<td class="table-dark text-light">
							<form action="" method="POST">
								<button
									type="submit"
									name="<%=users[i].name %>"
									class="btn btn-sm btn-secondary"
								>
									Edit
								</button>
							</form>
						</td>
						<td>
							<form action="" method="POST">
								<button
									type="submit"
									name="<%=users[i].name %>"
									class="btn btn-sm btn-danger"
								>
									Delete
								</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
